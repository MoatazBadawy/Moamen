<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.picsapp.moamenapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home.ui.view.activity.YoutubePlayerActivity"
            android:screenOrientation="landscape"
            android:launchMode="singleTop"
            />
        <!-- Ad data -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4010171402649915~5502252008" /> <!-- "launchMode" to not repeat the Activity when click on it many times -->
        <activity
            android:name=".Activity.Category.ImagesZahrahActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesErtugleActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesMorningActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesDowaaActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesIslamActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesMoqNabaweActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesSaleheenActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesAqsaActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesOthersActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".Activity.Category.ImagesRamadanActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.SliderActivityTheme" /> <!-- Quran surah Activity -->
        <activity
            android:name=".Adapter.Picasso.PicassoDisplayWallpaperImage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Adapter.Picasso.PicassoDisplayOtherImages"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Project.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>