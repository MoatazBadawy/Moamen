<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_material_light"
    tools:context=".Activity.ActivityImages.ImagesErtugleActivity">

    <!-- Text top bar -->
    <TextView
        android:id="@+id/text_image_Ertugle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:text="قيامة أرطغرل"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Button back -->
    <Button
        android:id="@+id/button_back_Ertugle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_back_black" />

    <!-- recyclerview for display images -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_image_Ertugle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_image_Ertugle"
        android:layout_marginTop="10dp"
        android:background="@color/colorBackground"
        android:fastScrollEnabled="false"
        android:nestedScrollingEnabled="false"
        android:scrollbars="none" />

    <!-- Ad -->
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewErtugle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:elevation="4dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4010171402649915/8911061706"></com.google.android.gms.ads.AdView>

</RelativeLayout>